<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.oasis.mapper.user.UserRelationMapper">

    <select id="getUserRelationListByUid" parameterType="java.lang.String" resultType="com.flab.oasis.model.UserRelation">
        SELECT UID, RELATION_USER AS relationUser, RELATION_TYPE as relationType
        FROM USER_RELATION
        WHERE UID = #{uid}
    </select>

</mapper>