<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.oasis.mapper.user.UserCategoryMapper">

    <insert id="createUserCategory" parameterType="java.util.List">
        INSERT INTO USER_CATEGORY (UID, BOOK_CATEGORY, CREATE_DATETIME, MODIFY_DATETIME)
        VALUES
            <foreach collection="list" item="item" separator=",">
                (#{item.uid}, #{item.bookCategory}, NOW(), NOW())
            </foreach>
    </insert>

    <select id="getUserCategoryListByUid" parameterType="java.lang.String" resultType="com.flab.oasis.model.UserCategory">
        SELECT UID, BOOK_CATEGORY AS bookCategory
        FROM USER_CATEGORY
        WHERE UID = #{uid}
    </select>

    <select id="getUidListWithOverlappingBookCategory" parameterType="com.flab.oasis.model.OverlappingCategoryUserSelect" resultType="java.util.List">
        SELECT DISTINCT UID
        FROM USER_CATEGORY
        WHERE UID != #{UID} AND
            UID NOT IN (
                <foreach collection="userRelationList" item="item" separator=",">
                    #{item.relationUser}
                </foreach>
            ) AND
            BOOK_CATEGORY IN (
                <foreach collection="userCategoryList" item="item" separator=",">
                    #{item.bookCategory}
                </foreach>
            )
    </select>

    <select id="getUserCategoryCountList" parameterType="com.flab.oasis.model.UserCategoryCountSelect" resultType="com.flab.oasis.model.UserCategoryCount">
        SELECT UID, COUNT(BOOK_CATEGORY) AS bookCategoryCount
        FROM USER_CATEGORY
        WHERE UID IN (
            <foreach collection="uidList" item="item" separator=",">
                #{item}
            </foreach>
        ) AND
        BOOK_CATEGORY NOT IN (
            <foreach collection="userCategoryList" item="item" separator=",">
                #{item.bookCategory}
            </foreach>
        )
        GROUP BY UID
    </select>

</mapper>